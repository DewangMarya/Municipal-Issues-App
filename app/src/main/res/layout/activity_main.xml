<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/report_issues_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Report Issues"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/BlueViolet"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/top_issues_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 5 Voted Issues"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/report_issues_button"/>

    <LinearLayout
        android:id="@+id/box_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_issues_heading">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <!-- Rows 1 to 5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Row 1"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Row 2"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Row 3"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Row 4"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Row 5"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />


        <Button
            android:id="@+id/show_maps_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Maps"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:backgroundTint="@color/BlueViolet"
            app:cornerRadius="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
